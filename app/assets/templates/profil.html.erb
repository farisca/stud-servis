<h2 align="center"> {{ 'MY_PROFILE' | translate }} </h2>
<div class="container" style="position:relative; top:50px; width:400px;">
        
    <form class="form-register" ng-submit="save()">
           
        <p> {{ 'STUDENT_NAME' | translate }} </p>
        <label for="inputName" class="sr-only">Ime</label>
        <input type="text" ng-model="data.name" id="inputName" class="form-control" placeholder="" required autofocus><br>

        <p> {{ 'STUDENT_SURNAME' | translate }} </p>
        <label for="inputSurname" class="sr-only"><%= I18n.t('student_surname') %></label>
        <input type="text" ng-model="data.surname" id="inputSurname" class="form-control" placeholder="" required autofocus><br>

        <div ng-controller="LocationController">
          <p>{{ 'CITY' | translate }}</p>
          <label for="inputLocation" class="sr-only"><%= I18n.t('city') %></label>
          <select class="form-control" id="select" ng-model="data.location" >
            <option ng-repeat="location in podaci" ng-selected="locationSelected(location.id)" value="{{location.id}}">
              {{location.city}}
            </option>
          </select>
          <br/>
        </div>

        <p> {{ 'UNIVERSITY' | translate }} </p>
        <label for="inputUniversity" class="sr-only"><%= I18n.t('student_university') %></label>
        <input type="text" ng-model="data.university" id="inputUniversity" class="form-control" placeholder="" required autofocus><br>



        <p> {{ 'FACULTY' | translate }} </p>
        <label for="inputFaculty" class="sr-only"><%= I18n.t('student_faculty') %></label>
        <input type="text" ng-model="data.faculty" id="inputFaculty" class="form-control" placeholder="" required autofocus><br>
