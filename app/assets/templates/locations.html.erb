<h2 align="center"> {{ 'CREATE_LOCATION' | translate }}</h2>
<div class="container" style="position:relative; top:50px; width:400px;">
        
    <form class="form-register" ng-controller="AdminLocationsCtrl as loc" ng-submit="loc.createNewLoc()">
        <p>{{ 'ADD_NEW_LOCATION' | translate }}</p>
        <label for="inputName" class="sr-only">{{ 'CITY' | translate }}</label>
        <input type="text" ng-model="loc.data.city" id="inputCity" class="form-control" placeholder="" required autofocus><br>
         
        <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'AD_LOCATION' | translate }}</button>
        <br>
        <div ng-show="loc.isSuccess()" class="alert alert-success" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Gre≈°ka:</span>
          {{loc.getSuccess()}}
        </div>
        <div ng-show="loc.isError()" class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  {{loc.getError()}}
</div>

    </form>
    <br><br><br><br>
</div>