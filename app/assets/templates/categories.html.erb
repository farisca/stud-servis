<h2 align="center"> {{ 'CREATE_CATEGORY' | translate }}</h2>
<div class="container" style="position:relative; top:50px; width:400px;">
        
    <form class="form-register" ng-controller="AdminCategoriesCtrl as cat" ng-submit="cat.createNewCat()">
        <p>{{ 'ADD_NEW_CATEGORY' | translate }}</p>
        <label for="inputName" class="sr-only">{{ 'CATEGORY' | translate }}</label>
        <input type="text" ng-model="loc.data.name" id="inputCity" class="form-control" placeholder="" required autofocus><br>
         
        <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'AD_CATEGORY' | translate }}</button>
        <br>
        <div ng-show="cat.isSuccess()" class="alert alert-success" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          {{cat.successMsg}}
        </div>
        <div ng-show="cat.isError()" class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Gre≈°ka:</span>
              {{cat.errorMsg}}
        </div>
    </form>
    <br><br><br><br>
</div>