<!DOCTYPE html>
<html ng-app="aplikacija">
<head>
<base href="/">
  <title>StudServis</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>

<body  ng-controller="glavniController as glavni">

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Studentski servis</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
      <ul class="nav navbar-nav">
      <li ng-show="glavni.isVidljiv('admin')" ng-class="{active: glavni.isTrenutna('admin')}"><a href= "/admin" ng-click="glavni.setTrenutna('admin')" >{{ 'ADMIN' | translate }}</a></li>
	     <li ng-show="glavni.isVidljiv('pocetna')" ng-class="{active: glavni.isTrenutna('home')}"><a href= "/home" ng-click="glavni.setTrenutna('home')">{{ 'HOME' | translate }}</a></li>
            <li ng-show="glavni.isVidljiv('oglasi')" ng-class="{active: glavni.isTrenutna('oglasi')}"><a ng-click="glavni.setTrenutna('oglasi')">{{ 'AD' | translate }}</a></li>
            <li ng-show="glavni.isVidljiv('unosOglasa')" ng-class="{active: glavni.isTrenutna('unosOglasa')}"><a href= "/unosOglasa" ng-click="glavni.setTrenutna('unosOglasa')">{{ 'NEW_AD' | translate }}</a></li>
            <li ng-show="glavni.isVidljiv('kompanije')" ng-class="{active: glavni.isTrenutna('kompanije')}"><a ng-click="glavni.setTrenutna('kompanije')" >{{ 'COMPANIES' | translate }}</a></li>  
       
       <li ng-show="glavni.isVidljiv('kategorije')" ng-class="{active: glavni.isTrenutna('kategorije')}" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ 'CATEGORIES' | translate }}<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
            <li><a href="#">Separated link</a></li>
            <li class="divider"></li>
            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>
      </ul>
      
     <!-- <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      </form>-->
      
      <ul class="nav navbar-nav navbar-right">

        <li ng-show="glavni.isVidljiv('notifikacije')" ng-class="{active: glavni.isTrenutna('notifikacije')}"><a href= "/notifikacije" ng-click="glavni.setTrenutna('notifikacije')" >{{ 'NOTIFICATIONS' | translate }} {{new_notifications}}</a></li>
        <li ng-show="glavni.isVidljiv('promjenaSifre')" ng-class="{active: glavni.isTrenutna('promjenaSifre')}"><a href= "/promjenaSifre" ng-click="glavni.setTrenutna('promjenaSifre')" >{{ 'CHANGE_PASSWORD' | translate }}</a></li>
	      <li ng-show="glavni.isVidljiv('registracijaKompanije')" ng-class="{active: glavni.isTrenutna('regKom')}"><a href="/kompanija" ng-click="glavni.setTrenutna('regKom')">{{ 'REGISTER_COMPANY' | translate }}</a></li>
        <li ng-show="glavni.isVidljiv('registracijaStudenta')" ng-class="{active: glavni.isTrenutna('regStud')}"><a href="/registracija" ng-click="glavni.setTrenutna('regStud')">{{ 'REGISTER_STUDENT' | translate }}</a></li>
        <li ng-show="glavni.isVidljiv('profil')" ng-class="{active: glavni.isTrenutna('profil')}"><a href="/profil" ng-click="glavni.setTrenutna('profil')">{{ 'PROFILE' | translate }}</a></li>
        <li ng-show="glavni.isVidljiv('prijava')" ng-class="{active: glavni.isTrenutna('prijava')}"><a href="/login" ng-click="glavni.prijava()">{{ 'LOGIN' | translate }}</a></li>
        <li ng-show="glavni.isVidljiv('odjava')" ng-class="{active: glavni.isTrenutna('odjava')}"><a href="/" ng-click="glavni.logout()">{{ 'LOGOUT' | translate }}</a></li>
        <li ng-class="{ active: glavni.isCurrentLanguage('bs')}"><a href="#" ng-click="glavni.promijeniJezik('bs')">BS</a></li>
        <li ng-class="{ active: glavni.isCurrentLanguage('en')}"><a href="#" ng-click="glavni.promijeniJezik('en')">EN</a></li>
      </ul>
    </div>
  </div>
</nav>
<div ng-view>
<%= yield %>
</div>
    </body>


</html>
